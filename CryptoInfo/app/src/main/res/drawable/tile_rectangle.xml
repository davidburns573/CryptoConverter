<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_activated="true">
        <shape>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            <corners
                android:radius="5dp"/>
            <solid
                android:color="@color/colorSelectedBlue"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            <corners
                android:radius="5dp"/>
            <solid
                android:color="@color/colorLightGray"/>
        </shape>
    </item>
</selector>